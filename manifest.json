{
    "name": "podsync",
    "id": "podsync",
    "packaging_format": 1,
    "description": {
        "en": "Service to fetch new youtube or vimeo videos and convert them into subscribeable audio podcast feed",
        "fr": "I don't speak french"
    },
    "version": "1.0~ynh1",
    "url": "https://github.com/mxpv/podsync",
    "upstream": {
        "license": "free",
        "website": "https://github.com/mxpv/podsync",
        "demo": "https://github.com/mxpv/podsync",
        "admindoc": "https://yunohost.org/packaging_apps",
        "userdoc": "https://yunohost.org/apps",
        "code": "https://github.com/mxpv/podsync"
    },
    "license": "free",
    "maintainer": {
        "name": "John doe",
        "email": "john.doe@example.com"
    },
    "requirements": {
        "yunohost": ">= 4.3.0"
    },
    "multi_instance": false,
    "services": [
        "nginx"
    ],
    "arguments": {
        "install" : [
            {
                "name": "domain",
                "type": "domain"
            },
            {
                "name": "path",
                "type": "path",
                "example": "/podsync",
                "default": "/podsync"
            },
            {
                "name": "admin",
                "type": "user"
            },
            {
                "name": "is_public",
                "type": "boolean",
                "default": true,
                "help": {
                    "en": "Make podsync publicly accessible so feed reader can connect to it.",
                    "fr": "French."
                }
            },
            {
                "name": "language",
                "type": "string",
                "ask": {
                    "en": "Choose the application language",
                    "fr": "Choisissez la langue de l'application"
                },
                "choices": ["gg", "en"],
                "default": "en"
            },
            {
                "name": "youtube_token",
                "type": "password",
                "help": {
                    "en": "YouTube API key to fetch new videos through their API.",
                    "fr": "French."
                }
            },
            {
                "name": "youtube_path",
                "type": "string",
                "help": {
                    "en": "YouTube path to channel, playlist or video",
                    "fr": "French."
                }
            },
            {
                "name": "podsync_path",
                "type": "string",
                "help": {
                    "en": "Path to store files in",
                    "fr": "French."
                }
            }
        ]
    }
}
